<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main Theme Style -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar Title Style -->
    <style name="ToolbarTitleStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <!-- Custom Notice Item background and effects -->
    <style name="NoticeItemStyle">
        <item name="android:background">@drawable/recyclerview_ripple</item>
    </style>

    <!-- NavigationDrawer Styles -->

    <!-- Header User Style -->
    <style name="HeaderUserStyle" parent="@style/TextAppearance.AppCompat.Large.Inverse">
        <item name="android:textSize">@dimen/username_size</item>
    </style>

    <!-- Header Email Style -->
    <style name="HeaderEmailStyle" parent="@style/TextAppearance.AppCompat.Large.Inverse">
        <item name="android:textSize">@dimen/email_size</item>
    </style>

    <!-- Main Board Styles -->

    <!-- Notice Title Style -->
    <style name="NoticeTitleStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:background">@drawable/notice_title_textview</item>
        <item name="android:layout_marginBottom">@dimen/teacher_name_margin_top</item>
    </style>

    <!-- Teacher Name Style -->
    <style name="TeacherNameStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/teacher_name_size</item>
        <item name="android:layout_marginTop">@dimen/teacher_name_margin_top</item>
    </style>

</resources>
